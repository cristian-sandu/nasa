{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "plugin:import-order/recommended",
    "plugin:prettier/recommended",
    "prettier",
    "react-app"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier",
    "import-order"
  ],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [0],
    "indent": ["error", 2],
    "react/jsx-indent": ["error", 2],
    "import-order/import-order": 2
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
